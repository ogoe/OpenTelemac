<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="7" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="heat_exchange" author="A.Leroy" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_heat_exchange.cas"
       title="heat exchange scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_heat_exchange.cas"
       title="heat exchange parallel mode"
   />
   <action xref="3"
       do="translate;run;cas;princi"
       code="telemac3d" target="t3d_heat_exchange_rain_wind.cas"
       title="heat exchange rain wind scalar mode"
   />
   <action xref="4"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac3d" target="t3d_heat_exchange_rain_wind.cas"
       title="heat exchange rain wind parallel mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:T3DRES" />
      <v2 vars=":map" target="f3d_heat_exchange.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:T3DRES" />
      <v5 vars=":map" target="f3d_heat_exchange.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[])" />
   </cast>
   <cast xref="cas-parall12" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:T3DRES" />
      <v8 vars=":map" target="2:T3DRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[])" />
   </cast>
   <cast xref="ref-3" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="3:T3DRES" />
      <v11 vars=":map" target="f3d_heat_exchange_rain_wind.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[5.E-3,1.E-4,1.E-4,1.E-5,1.E-3])" />
   </cast>
   <cast xref="ref-4" config="oneofall" time="[-1]" type="2d:">
      <v13 vars=":map" target="4:T3DRES" />
      <v14 vars=":map" target="f3d_heat_exchange_rain_wind.slf" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v15,[5.E-3,1.E-4,1.E-4,1.E-5,1.E-3])" />
   </cast>
   <cast xref="cas-parall34" config="oneofall" time="[-1]" type="2d:">
      <v16 vars=":map" target="3:T3DRES" />
      <v17 vars=":map" target="4:T3DRES" />
      <v18 vars="mapdiff(v16,v17)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v18,[5.E-3,1.E-4,1.E-4,1.E-5,1.E-3])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="timeseries" type="history" config="together" time="[0:-1]" size="(12;7)" >
      <layer vars="Z:line" extract="(0;0)#[-1]" target="1:T3DRES" />
   </plot1d>
   <plot1d xref="timeseries_all_layers" type="history" config="together" time="[0:-1]" size="(12;7)" >
      <layer vars="Z:line" extract="(0;0)" target="1:T3DRES" />
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="mesh" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="elevation Z:mesh" target="1:T3DRES" />
   </plot2d>
   <plot2d xref="mesh_section" type="v-section" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="Z:wire" extract="(-100;0)(100;0)" target="1:T3DRES"  />
   </plot2d>
   <plot2d xref="velocity" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="velocity U:map" extract="[]#[-1]" target="1:T3DRES"  />
   </plot2d>

</validation>
