   </plot2d>
   <plot2d xref="FreeSurfacetf" size="(8;8)" >
      <layer vars="free surface:map" target="1:T2DRES" config="oneofall" time="[-1]" />
   </plot2d>
       <plot2d xref="FreeSurfacet3" size="(8;8)" >
