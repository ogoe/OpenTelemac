<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="bosse mixte T2D+SIS" author="P.Tassi" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="telemac2d" target="t2d_bosse_mixte-t2d.cas"
       title="bosse mixte T2D+SIS scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="telemac2d" target="t2d_bosse_mixte-t2d.cas"
       title="bosse mixte T2D+SIS parallel mode"
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:SISRES" />
      <v2 vars=":map" target="fis_bosse_mixte-t2d.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:SISRES" />
      <v5 vars=":map" target="fis_bosse_mixte-t2d.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:SISRES" />
      <v8 vars=":map" target="2:SISRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[])" />
   </cast>
   <cast xref="ref-1-t2d" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="1:T2DRES" />
      <v11 vars=":map" target="f2d_bosse_mixte-t2d.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[])" />
   </cast>
   <cast xref="ref-2-t2d" config="oneofall" time="[-1]" type="2d:">
      <v13 vars=":map" target="2:T2DRES" />
      <v14 vars=":map" target="f2d_bosse_mixte-t2d.slf" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v15,[])" />
   </cast>
   <cast xref="cas-parall-t2d" config="oneofall" time="[-1]" type="2d:">
      <v16 vars=":map" target="1:T2DRES" />
      <v17 vars=":map" target="2:T2DRES" />
      <v18 vars="mapdiff(v16,v17)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v18,[])" />
   </cast>

