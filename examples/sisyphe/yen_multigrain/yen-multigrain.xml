   <action xref="CompareResults_CrossSections"
      do="python yen.py sis_yen-exp_multi.slf sis_yen-exp_multi.slf " code="exec"
	  target="yen.py" deprefs="yen_90profilexy-koor.dat;yen_180profilexy-koor.dat;1:SISRES"
      title="Yen post processing"
   />
   <action xref="CompareResults_Evolution"
      do="python yen_contour.py sis_yen-exp_multi.slf " code="exec"
	  target="yen_contour.py" deprefs="PaperDataRun5.png;1:SISRES"
      title="Yen post processing"
   />


</validation>
