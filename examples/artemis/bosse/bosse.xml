<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="bj78" author="HR Wallingford" contact="www.opentelemac.org" />
   </deco>
   <deco xref="line">
      <look color="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       set='SOLVEUR=8'
       code="artemis" target="art_bosse.cas"
       title="bosse scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       set='SOLVEUR=9|PARALLEL PROCESSORS=4'
       code="artemis" target="art_bosse.cas"
       title="bosse parallel mode"
   />

<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:ARTRES" />
      <v2 vars=":map" target="f2d_bosse_x.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1.e-8,1.e-5,1.e-8,1.e-8,1.e-5,1.e-8])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:ARTRES" />
      <v5 vars=":map" target="f2d_bosse_x.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1.e-4,10.,1.e-8,1.e-8,5.,1.e-8])" />
   </cast>
<!-- need to improve comparison methods to account for modulo 2PI in directions/phases -->
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:ARTRES" />
      <v8 vars=":map" target="2:ARTRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1.e-4,10.,1.e-8,1.e-8,5.,1.e-8])" />
   </cast>
<!-- need to improve comparison methods to account for modulo 2PI in directions/phases -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="Section" type="v-section" config="together" deco="default" >
      <layer vars="wave height:line" extract="(7;5)(7;14)" target="1:ARTRES" time="[0]" deco="line" />
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="Mesh" size="(8;10)" >
      <layer vars="bottom:mesh" target="1:ARTGEO" config="oneofall" />
   </plot2d>
   <plot2d xref="Bathy" size="(8;10)" >
      <layer vars="bottom:map" target="1:ARTRES" config="oneofall" />
   </plot2d>
   <plot2d xref="WaveHeight" size="(8;10)" >
      <layer vars="wave height:map" target="2:ARTRES" config="oneofall" />
   </plot2d>

</validation>
