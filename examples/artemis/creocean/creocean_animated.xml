<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="creocean_animated" author="HR Wallingford" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi" ncsize="4"
       set='SOLVEUR=9|PARALLEL PROCESSORS=4'
       code="artemis" target="art_creocean200-anim.cas"
       title="animated creocean parallel mode"
   />
   
<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<!-- Check against Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:ARTRES" />
      <v2 vars=":map" target="f2d_creocean200.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the reference file."
         fail="checkval(v3,[1.e-8,1.e-8,1.e-8,360.,1.e-8])" />
   </cast>

   <cast xref="ref-1(amp1)" config="oneofall" time="[0]" type="2d:">
      <v11 vars=":map" target="1:ARTAMP" />
      <v12 vars=":map" target="famp_creocean200.slf" />
      <v13 vars="mapdiff(v11,v12)" />
      <return title="Comparison with the reference file (first period)."
         fail="checkval(v13,[2.e-7])" />
   </cast>
   <cast xref="ref-1(amp10)" config="oneofall" time="[9]" type="2d:">
      <v21 vars=":map" target="1:ARTAMP" />
      <v22 vars=":map" target="famp_creocean200.slf" />
      <v23 vars="mapdiff(v21,v22)" />
      <return title="Comparison with the reference file (10th period)."
         fail="checkval(v23,[2.e-7])" />
   </cast>
   <cast xref="ref-1(amp20)" config="oneofall" time="[19]" type="2d:">
      <v31 vars=":map" target="1:ARTAMP" />
      <v32 vars=":map" target="famp_creocean200.slf" />
      <v33 vars="mapdiff(v31,v32)" />
      <return title="Comparison with the reference file (last period)."
         fail="checkval(v33,[3.e-7])" />
   </cast>

<!-- Could plot time history at one point for a short period  ~~~~~ -->
<!-- to compare the traces from the reference and the new run ~~~~~ -->

</validation>
