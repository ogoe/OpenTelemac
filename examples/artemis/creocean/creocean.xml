<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="creocean" author="HR Wallingford" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="artemis" target="art_creocean.cas"
       title="creocean boundaries in cli"
   />
   <action xref="2"
       do="translate;run;cas;princi"
       code="artemis" target="art_creocean_2.cas"
       title="creocean boundaries in BORH"
   />
<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:ARTRES" />
      <v2 vars=":map" target="f2d_creocean.9366.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1.e-8,1.e-8,360.,1.e-8])" />
   </cast>

   <cast xref="1-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:ARTRES" />
      <v5 vars=":map" target="1:ARTRES" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with boundary conditions in cli file."
         fail="checkval(v6,[1.e-8,1.e-8,2.e-7,1.e-8])" />
   </cast>

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
<!-- /!\ Being ignored at the moment. Cf. <telemac2d>/.../011_bumpflu/bumpflu.xml
-->

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="Mesh" size="(12;8)" >
      <layer vars="bottom:mesh" target="1:ARTRES" config="oneofall" />
   </plot2d>
   <plot2d xref="Bathy" size="(12;8)" >
      <layer vars="bottom:map" target="1:ARTRES" config="oneofall" />
   </plot2d>
   <plot2d xref="WaveHeight" size="(12;8)" >
      <layer vars="wave height:map" target="1:ARTRES" config="oneofall" />
   </plot2d>
   <plot2d xref="Breaking" size="(12;8)" >
      <layer vars="qb:map" target="1:ARTRES" config="oneofall" />
   </plot2d>

</validation>
