<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="13" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="tempete Manche" author="T.Fouquet" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="tomawac" target="manche.cas"
       title="Storm : calculted geometry (double in Fortran user)"
   />
   <action xref="2"
       do="translate;run;cas;princi"
       code="tomawac" target="manchelim.cas"
       title="Storm : read geometry (simple in a file)"
   />
   <cast xref="ref1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:WACRES" />
      <v2 vars=":map" target="ref_tom_calc.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison between results from calculated geometry and reference value."
         fail="checkval(v3,[1e4])" />
   </cast>
   <cast xref="ref2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:WACRES" />
      <v5 vars=":map" target="ref_tom_spher.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison between results from read geometry and reference run."
         fail="checkval(v6,[1e4])" />
   </cast>
   <cast xref="cas" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:WACRES" />
      <v8 vars=":map" target="2:WACRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between 2 geometries run."
         fail="checkval(v9,[0.2,360,1e-8,1e-8,1e-8,0.015,0.015,0.015 ])" />
   </cast>
 
<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

