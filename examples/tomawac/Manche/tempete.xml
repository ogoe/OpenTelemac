   <deco xref="bleu">
     <look cmap="Artic.xml" extend="'max'"/>
   </deco>  
<deco xref="hiver">
      <look cmap="winter.xml" extend="'max'"/>
   </deco>

   <plot2d xref="img/mesh" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="FOND          :mesh" target="1:WACGEO" />
   </plot2d>
   <plot2d xref="img/bathy" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Bathymetry')" >
      <layer vars="FOND          :map" target="2:WACGEO" deco="bleu"/>
   </plot2d>
   <plot2d xref="img/results" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Height')">
      <layer vars="HAUTEUR HM0 :map" target="1:WACRES" deco="hiver"/>
   </plot2d>
   <plot2d xref="img/results2" config="oneofall" time="[-1]" size="(12;7)" set="title('Wave Height')">
<!--     <plot2d xref="img/results2" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Height')">-->

      <layer vars="HAUTEUR HM0 :map" target="2:WACRES" deco="hiver"/>
   </plot2d>
   <plot2d xref="img/resultsV1P3" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Height')">
      <layer vars="HAUTEUR_HM0 :map" target="r2d.V1P3.slf" deco="hiver"/>
   </plot2d>
   <plot2d xref="img/direction" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Direction')">
      <layer vars="DIRECTION MOY :map" target="1:WACRES" deco="hiver"/>
   </plot2d>
   <plot2d xref="img/directionref" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Direction')">
