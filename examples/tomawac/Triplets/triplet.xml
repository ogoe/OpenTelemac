<?xml version="1.0"?> 
<!-- Validation and verification of test cases, given a list of CAS files 
--> 
<validation xref="case" rank="5"> 
 
<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
   /!\ This section is being ignored at the moment --> 
   <deco xref="default"> 
      <look format="png" colourbar="jet.xml" /> 
      <data title="Triplets" author="T. Fouquet" contact="www.opentelemac.org" /> 
   </deco> 
   <deco xref="vect"> 
      <look colour="jet.xml" /> 
   </deco> 
   <deco xref="line"> 
      <look colour="k" /> 
   </deco> 
 
<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
   /!\ do="cas;princi" are being ignored at the moment 
-->  
   <action xref="1"
       do="translate;run;cas;princi" 
       code="tomawac" target="tom_triplet1.cas" 
       title="Triplets scalar mode" 
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4" 
       code="tomawac" target="tom_triplet1.cas" 
       title="Triplets parallel mode" 
   />   
   <action xref="3"
       do="translate;run;cas;princi" 
       code="tomawac" target="tom_triplet2.cas" 
       title="Triplets scalar mode" 
   />
   <action xref="4"
       do="translate;run;cas;princi" ncsize="4" 
       code="tomawac" target="tom_triplet2.cas" 
       title="Triplets parallel mode" 
   />   
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="cas-triplet1" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:WACRES" />
      <v8 vars=":map" target="2:WACRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential TRIA 1  and parallel TRIA1 run."
         fail="checkval(v9,[1e-4])" />
   </cast>
   <cast xref="cas-triplet2" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="3:WACRES" />
      <v11 vars=":map" target="4:WACRES" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison between sequential TRIA 2  and parallel TRIA2 run."
         fail="checkval(v12,[1e-4])" />
   </cast>
   <cast xref="triplet1-triplet2" config="oneofall" time="[-1]" type="2d:">
<!-- <v15 vars="mapdiff(v7,v10)" /> --> 
      <v13 vars=":map" target="1:WACRES" />
      <v14 vars=":map" target="3:WACRES" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison between sequential TRIA 1  and sequential TRIA2 ."
         fail="checkval(v15,[1])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~  --> 
<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
   --> 
 
<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ 
  --> 
   <plot2d xref="img/results" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave eigth with Non linear LTA triads transfer')" >
      <layer vars="WAVE HEIGHT HM0 :map" target="1:WACRES" />
   </plot2d>
   <plot2d xref="img/results2" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave eigth with Non linear SPB triads transfer')" >
      <layer vars="WAVE HEIGHT HM0 :map" target="3:WACRES" />
   </plot2d>
</validation> 
