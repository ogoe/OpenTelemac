<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="3" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="deferl_bj78" author="T.Fouquet" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="tomawac" target="tom_bj15.cas"
       title="deferl_bj78 scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="tomawac" target="tom_bj15.cas"
       title="deferl_bj78 parallel mode"
   />   
   <!-- 2 cas artificiels pour etendre la couverture
	DEPTH-INDUCED BREAKING DISSIPATION = 3 et 4
   -->
      <action xref="3"
       do="translate;run;cas;princi" 
       code="tomawac" target="tom_deferl3.cas" 
       title="deferl3 scalar mode" 
   />
   <action xref="4"
       do="translate;run;cas;princi" 
       code="tomawac" target="tom_deferl4.cas" 
       title="deferl4 scalar mode" 
   />
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:WACRES" />
      <v2 vars=":map" target="fom_bj15.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[0.01, 1, 1e-8, 1,0.001, 1e-2])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:WACRES" />
      <v5 vars=":map" target="fom_bj15.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[0.01, 1, 1e-8, 1,0.001, 1e-2])" />
   </cast>
   <cast xref="cas-parall" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:WACRES" />
      <v8 vars=":map" target="2:WACRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1e-4])" />
   </cast>

<!-- Actions on output files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->

<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="img/section1d" type="v-section" config="together" size="(12;7)" set="title('bathymetry profile')">
      <layer vars="FOND            :line" extract="(0;6)(25;6)" target="1:WACGEO" />
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
-->
   <deco xref="pastel">
     <look cmap="Pastel1.xml" levels="np.arange(0.025,0.225,0.025)" extend="'max'"/>

   </deco>
   <plot2d xref="img/mesh" config="oneofall" time="[-1]" size="(12;7)" > 
      <layer vars="FOND            :mesh" target="1:WACGEO" />
   </plot2d>
   <plot2d xref="img/results" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Heigth for Battjes and Janssen breaking-induced dissipation')" >
      <layer vars="WAVE HEIGHT HM0 :map" target="1:WACRES" deco="pastel"/>
   </plot2d>
   <plot2d xref="img/results3" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Heigth for Roelvink breaking-induced dissipation')">
      <layer vars="WAVE HEIGHT HM0 :map" target="3:WACRES" deco="pastel" />
   </plot2d>
   <plot2d xref="img/results4" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Heigth for Izumiya and Horikawa breaking-induced dissipation')">
      <layer vars="WAVE HEIGHT HM0 :map" target="4:WACRES" deco="pastel"/>
   </plot2d>


</validation>
