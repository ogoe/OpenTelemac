<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="5" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="fetch_lim" author="T.Fouquet" contact="www.opentelemac.org" />
   </deco>
   <deco xref="vect">
      <look colour="jet.xml" />
   </deco>
   <deco xref="line">
      <look colour="k" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="tomawac" target="tom_calais.cas"
       title="Calais scalar mode"
   />
   <action xref="2"
       do="translate;run;cas;princi" ncsize="4"
       code="tomawac" target="tom_calais.cas"
       title="Calais parallel mode"
   />

<!-- Cas "artificiels" pour augmenter la couverture -->
<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:WACRES" />
      <v2 vars=":map" target="ref_tom_calais_v6p0.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[1e-4])" />
   </cast>
   <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v4 vars=":map" target="2:WACRES" />
      <v5 vars=":map" target="ref_tom_calais_v6p0.slf" />
      <v6 vars="mapdiff(v4,v5)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v6,[1e-4])" />
   </cast>
   <cast xref="cas-parall12" config="oneofall" time="[-1]" type="2d:">
      <v7 vars=":map" target="1:WACRES" />
      <v8 vars=":map" target="2:WACRES" />
      <v9 vars="mapdiff(v7,v8)" />
      <return title="Comparison between sequential and parallel run."
         fail="checkval(v9,[1e-4])" />
   </cast>
   <cast xref="ref-3" config="oneofall" time="[-1]" type="2d:">
      <v10 vars=":map" target="1:WACRES" />
      <v11 vars=":map" target="ref_tom_calais_v5p8.slf" />
      <v12 vars="mapdiff(v10,v11)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v12,[1e-4])" />
   </cast>
   <cast xref="ref-4" config="oneofall" time="[-1]" type="2d:">
      <v13 vars=":map" target="2:WACRES" />
      <v14 vars=":map" target="ref_tom_calais_v5p8.slf" />
      <v15 vars="mapdiff(v13,v14)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v15,[1e-4])" />
   </cast>

   <deco xref="rose">
      <look cmap="Blues.xml" extend="'max'"/>
   </deco>  
      <plot2d xref="img/mesh" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="FOND            :mesh" target="1:WACGEO" />
   </plot2d>
   <plot2d xref="img/hm0" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave height for new version')" >
      <layer vars="HAUTEUR HM0 :map" target="1:WACRES" deco="rose" />
   </plot2d>
   <plot2d xref="img/hm0v5p8" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave height for V5P8')"> >
      <layer vars="HAUTEUR HM0 :map" target="ref_tom_calais_v5p8.slf" deco="rose" />
   </plot2d>
   <plot2d xref="img/hm0v6p0" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave height for V6P0')">
      <layer vars="HAUTEUR HM0 :map" target="ref_tom_calais_v6p0.slf" deco="rose" />
   </plot2d>
   <plot2d xref="img/direction" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Direction for new version')" >
      <layer vars="DIRECTION MOY   :map" target="1:WACRES" deco="rose" />
   </plot2d>
   <plot2d xref="img/directionv6p0" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Direction for V6P0')"> >
      <layer vars="DIRECTION MOY   :map" target="ref_tom_calais_v6p0.slf" deco="rose" />
   </plot2d>
   <plot2d xref="img/power" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('POWER for new version')" >
      <layer vars="PUISSANCE HOULE :map" target="1:WACRES" deco="rose" />
   </plot2d>
   <plot2d xref="img/powerv5p8" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('POWER for V5P8')"> >
      <layer vars="PUISSANCE HOULE :map" target="ref_tom_calais_v5p8.slf" deco="rose" />
   </plot2d>

</validation>
