<?xml version="1.0"?>
<!-- Validation and verification of test cases, given a list of CAS files
-->
<validation xref="case" rank="2" >

<!-- Extras and Meta Data ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ This section is being ignored at the moment -->
   <deco xref="default">
      <look format="png" colourbar="jet.xml" />
      <data title="turning_wind" author="T.Fouquet" contact="www.opentelemac.org" />
   </deco>

<!-- Actions on CAS files ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   /!\ do="cas;princi" are being ignored at the moment
-->
   <action xref="1"
       do="translate;run;cas;princi"
       code="tomawac" target="tom_turning_wind.cas"
       title="turning_wind scalar mode"
   />

<!-- Check on Reference File ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
   <cast xref="ref-1" config="oneofall" time="[-1]" type="2d:">
      <v1 vars=":map" target="1:WACRES" />
      <v2 vars=":map" target="fom_TW.slf" />
      <v3 vars="mapdiff(v1,v2)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v3,[0.04, 0.7, 0.00001, 0.00001, 0.004, 0.00001])" />
   </cast>

<!--    <cast xref="ref-2" config="oneofall" time="[-1]" type="2d:">
      <v11 vars=":map" target="1:WACVEB" />
      <v21 vars=":map" target="ref.slf" />
      <v31 vars="mapdiff(v11,v21)" />
      <return title="Comparison with the last time frame of the reference file."
         fail="checkval(v31,[1e-4])" />
   </cast>-->

   
<!-- plot1d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
   -->
   <plot1d xref="img/timeseries" type="history" config="together" time="[0:-1]" size="(12;7)" set="title('Wave Heigth at point (10,10)')">
      <layer vars="WAVE HEIGHT HM0 :line" extract="(10;10)" target="1:WACRES" />
   </plot1d>

<!-- plot2d ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
  -->
   <plot2d xref="img/mesh" config="oneofall" time="[-1]" size="(12;7)" >
      <layer vars="BOTTOM          :mesh" target="1:WACGEO" />
   </plot2d>
   <plot2d xref="img/results" config="oneofall" time="[-1]" size="(12;7)" set="colorbar;title('Wave Heigth')">
      <layer vars="WAVE HEIGHT HM0 :map" target="1:WACRES" />
   </plot2d>
</validation>
