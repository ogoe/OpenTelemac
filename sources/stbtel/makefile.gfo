	$(FC) $(FFLAGS) declarations_stbtel.f
	if EXIST $(DEST)\lib\declarations_stbtel.mod del /f $(DEST)\lib\declarations_stbtel.mod
 	if NOT EXIST $(DEST)\NUL mkdir $(DEST) $(DEST)\lib $(DEST)\bin
	move declarations_stbtel.mod $(DEST)\lib
